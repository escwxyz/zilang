{
  "name": "zilang",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "pnpm run format:biome && pnpm run format:prettier",
    "format:biome": "biome format --write",
    "format:prettier": "prettier --write \"**/*.{astro,yaml,yml}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "ultracite": "5.0.32"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
