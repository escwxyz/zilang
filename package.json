{
	"name": "zilang",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "pnpm run format:biome && pnpm run format:prettier",
		"format:biome": "biome format --write",
		"format:prettier": "prettier --write \"**/*.{astro,json,md,css,html}\"",
		"check-types": "turbo run check-types"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.5",
		"prettier": "3.6.2",
		"turbo": "^2.5.4",
		"typescript": "^5.8.3"
	},
	"packageManager": "pnpm@10.10.0",
	"engines": {
		"node": ">=18"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"sharp"
		]
	}
}
