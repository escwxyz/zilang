---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import { getGlobalBySlug } from "@/lib/data";

import "../styles/global.css";

const site = await getGlobalBySlug("site");

const { name, logo, slogan, description, keywords } = site;

interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;

const title = pageTitle
  ? slogan
    ? `${pageTitle} | ${name} - ${slogan}`
    : `${pageTitle} | ${name}`
  : name;
---

<!doctype html>
<html lang="en" class="h-full w-full m-0">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Jie Wang <hi@jiewa.ng>" />
    <meta property="og:title" content={title} />
    {description && <meta name="description" content={description} />}
    {keywords && <meta name="keywords" content={keywords.join(", ")} />}

    <meta property="og:description" content={description} />
    <!-- <meta property="og:image" content={logo.url} /> -->
    <meta property="og:url" content={Astro.url.toString()} />
    <title>
      {title}
    </title>
  </head>
  <body class="flex flex-col h-full">
    <Header />
    <main class="flex-1 p-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
